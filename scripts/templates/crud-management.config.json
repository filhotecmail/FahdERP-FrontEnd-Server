        {"name": "status", "label": "Status", "type": "select", "placeholder": "Selecione o status", "options": [{"value": "ativo", "label": "Ativo"}, {"value": "inativo", "label": "Inativo"}, {"value": "bloqueado", "label": "Bloqueado"}]},
        {"name": "perfilAcesso", "label": "Perfil de Acesso", "type": "select", "placeholder": "Selecione o perfil", "options": [{"value": "admin", "label": "Administrador"}, {"value": "user", "label": "Usuário"}, {"value": "viewer", "label": "Visualizador"}]},
        {"name": "dataInicio", "label": "Data Cadastro (Início)", "type": "date", "placeholder": ""},
        {"name": "dataFim", "label": "Data Cadastro (Fim)", "type": "date", "placeholder": ""}
      ],
      "statusFilters": [
        {"value": "all", "label": "Todos os registros"},
        {"value": "active", "label": "Usuários ativos"},
        {"value": "inactive", "label": "Usuários inativos"},
        {"value": "blocked", "label": "Usuários bloqueados"}
      ],
      "tableColumns": [
        {"key": "nome", "label": "Nome", "sortable": true},
        {"key": "email", "label": "E-mail", "sortable": true},
        {"key": "perfil", "label": "Perfil", "sortable": false},
        {"key": "status", "label": "Status", "sortable": true},
        {"key": "dataCadastro", "label": "Data Cadastro", "sortable": true},
        {"key": "ultimoAcesso", "label": "Último Acesso", "sortable": true}
