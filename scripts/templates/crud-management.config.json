      "dataTitle": "dos Produtos",
      "entityName": "produto",
      "dataDescription": "dos produtos",
      "filterFields": [
        {"name": "nome", "label": "Nome", "type": "text", "placeholder": "Digite o nome do produto"},
        {"name": "codigo", "label": "Código", "type": "text", "placeholder": "Digite o código"},
        {"name": "categoria", "label": "Categoria", "type": "select", "placeholder": "Selecione a categoria", "options": [{"value": "eletronicos", "label": "Eletrônicos"}, {"value": "roupas", "label": "Roupas"}, {"value": "casa", "label": "Casa e Jardim"}]},
        {"name": "status", "label": "Status", "type": "select", "placeholder": "Selecione o status", "options": [{"value": "ativo", "label": "Ativo"}, {"value": "inativo", "label": "Inativo"}, {"value": "descontinuado", "label": "Descontinuado"}]}
      ],
      "statusFilters": [
        {"value": "all", "label": "Todos os produtos"},
        {"value": "active", "label": "Produtos ativos"},
        {"value": "inactive", "label": "Produtos inativos"},
        {"value": "discontinued", "label": "Produtos descontinuados"}
      ],
      "tableColumns": [
        {"key": "codigo", "label": "Código", "sortable": true},
        {"key": "nome", "label": "Nome", "sortable": true},
        {"key": "categoria", "label": "Categoria", "sortable": true},
        {"key": "preco", "label": "Preço", "sortable": true},
        {"key": "estoque", "label": "Estoque", "sortable": true},
        {"key": "status", "label": "Status", "sortable": true}
      ],
      "batchActions": [
        {"key": "activate", "label": "Ativar Selecionados", "class": "btn-primary", "iconPath": "M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M11,16.5L18,9.5L16.59,8.09L11,13.67L7.91,10.59L6.5,12L11,16.5Z"},
        {"key": "updatePrices", "label": "Atualizar Preços", "class": "btn-secondary", "iconPath": "M7,15H9C9,16.08 10.37,17 12,17C13.63,17 15,16.08 15,15C15,13.9 13.96,13.5 11.76,12.97C9.64,12.44 7,11.78 7,9C7,7.21 8.47,5.69 10.5,5.18V3H13.5V5.18C15.53,5.69 17,7.21 17,9H15C15,7.92 13.63,7 12,7C10.37,7 9,7.92 9,9C9,10.1 10.04,10.5 12.24,11.03C14.36,11.56 17,12.22 17,15C17,16.79 15.53,18.31 13.5,18.82V21H10.5V18.82C8.47,18.31 7,16.79 7,15Z"}
      ]
    }
  },
  "usage": {
    "description": "Como usar este template",
    "steps": [
      "1. Copie o arquivo crud-management.vue.template para seu diretório de views",
      "2. Renomeie o arquivo para o nome desejado (ex: ProductManagementView.vue)",
      "3. Substitua os placeholders {{}} pelos valores específicos do seu módulo",
      "4. Use os presets disponíveis ou configure manualmente os parâmetros",
      "5. Ajuste os estilos conforme necessário para seu módulo específico"
    ],
    "placeholders": {
      "{{title}}": "Título principal da página",
      "{{subtitle}}": "Subtítulo descritivo",
      "{{badgeText}}": "Texto do badge",
      "{{iconPath}}": "Path SVG do ícone",
      "{{dataTitle}}": "Título da seção de dados",
      "{{entityName}}": "Nome da entidade",
      "{{dataDescription}}": "Descrição dos dados",
      "{{#each filterFields}}": "Loop dos campos de filtro",
      "{{#each statusFilters}}": "Loop dos filtros de status",
      "{{#each tableColumns}}": "Loop das colunas da tabela",
      "{{#each batchActions}}": "Loop das ações em lote",
      "{{tableColumnsCount}}": "Número total de colunas + 2 (checkbox + ações)"
    }
  }
}