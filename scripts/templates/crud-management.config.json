{
  "templateName": "crud-management",
  "description": "Template genérico para páginas de gerenciamento CRUD baseado no UserManagementView",
  "version": "1.0.0",
  "author": "Fahd ERP Team",
  "parameters": {
    "title": {
      "type": "string",
      "description": "Título principal da página",
      "required": true,
      "example": "Gerenciamento de Usuários"
    },
    "subtitle": {
      "type": "string", 
      "description": "Subtítulo descritivo da página",
      "required": true,
      "example": "Gerencie usuários, perfis de acesso e permissões do sistema"
    },
    "badgeText": {
      "type": "string",
      "description": "Texto do badge no cabeçalho",
      "required": false,
      "default": "Ativo",
      "example": "Sistema Ativo"
    },
    "iconPath": {
      "type": "string",
      "description": "Path SVG do ícone principal",
      "required": true,
      "example": "M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
    },
    "dataTitle": {
      "type": "string",
      "description": "Título da seção de dados",
      "required": true,
      "example": "dos Usuários"
    },
    "entityName": {
      "type": "string",
      "description": "Nome da entidade no singular (minúsculo)",
      "required": true,
      "example": "usuário"
    },
    "dataDescription": {
      "type": "string",
      "description": "Descrição dos dados para estado vazio",
      "required": true,
      "example": "dos usuários"
    },
    "filterFields": {
      "type": "array",
      "description": "Campos de filtro da consulta",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome do campo (camelCase)"
          },
          "label": {
            "type": "string", 
            "description": "Label exibido para o usuário"
          },
          "type": {
            "type": "string",
            "enum": ["text", "email", "select", "date", "number"],
            "description": "Tipo do campo de input"
          },
          "placeholder": {
            "type": "string",
            "description": "Placeholder do campo"
          },
          "options": {
            "type": "array",
            "description": "Opções para campos do tipo select",
            "items": {
              "type": "object",
              "properties": {
                "value": {"type": "string"},
                "label": {"type": "string"}
              }
            }
          }
        }
      },
      "example": [
        {
          "name": "nome",
          "label": "Nome",
          "type": "text",
          "placeholder": "Digite o nome do usuário"
        },
        {
          "name": "email", 
          "label": "E-mail",
          "type": "email",
          "placeholder": "Digite o e-mail"
        },
        {
          "name": "status",
          "label": "Status",
          "type": "select",
          "placeholder": "Selecione o status",
          "options": [
            {"value": "ativo", "label": "Ativo"},
            {"value": "inativo", "label": "Inativo"}
          ]
        }
      ]
    },
    "statusFilters": {
      "type": "array",
      "description": "Filtros de status (radio buttons)",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "value": {"type": "string"},
          "label": {"type": "string"}
        }
      },
      "example": [
        {"value": "all", "label": "Todos os registros"},
        {"value": "active", "label": "Registros ativos"},
        {"value": "inactive", "label": "Registros inativos"},
        {"value": "blocked", "label": "Registros bloqueados"}
      ]
    },
    "tableColumns": {
      "type": "array",
      "description": "Colunas da tabela de dados",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "key": {"type": "string"},
          "label": {"type": "string"},
          "sortable": {"type": "boolean", "default": false},
          "width": {"type": "string", "description": "CSS width value"}
        }
      },
      "example": [
        {"key": "nome", "label": "Nome", "sortable": true},
        {"key": "email", "label": "E-mail", "sortable": true},
        {"key": "perfil", "label": "Perfil", "sortable": false},
        {"key": "status", "label": "Status", "sortable": true},
        {"key": "dataCadastro", "label": "Data Cadastro", "sortable": true},
        {"key": "ultimoAcesso", "label": "Último Acesso", "sortable": true}
      ]
    },
    "batchActions": {
      "type": "array",
      "description": "Ações em lote disponíveis",
      "required": false,
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "key": {"type": "string"},
          "label": {"type": "string"},
          "class": {"type": "string", "enum": ["btn-primary", "btn-secondary", "btn-danger"]},
          "iconPath": {"type": "string"},
          "disabled": {"type": "boolean", "default": false}
        }
      },
      "example": [
        {
          "key": "activate",
          "label": "Ativar Selecionados",
          "class": "btn-primary",
          "iconPath": "M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M11,16.5L18,9.5L16.59,8.09L11,13.67L7.91,10.59L6.5,12L11,16.5Z"
        },
        {
          "key": "deactivate",
          "label": "Desativar Selecionados",
          "class": "btn-secondary",
          "iconPath": "M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
        },
        {
          "key": "report",
          "label": "Relatório de Usuários",
          "class": "btn-secondary",
          "iconPath": "M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
        }
      ]
    }
  },
  "presets": {
    "usuarios": {
      "title": "Gerenciamento de Usuários",
      "subtitle": "Gerencie usuários, perfis de acesso e permissões do sistema",
